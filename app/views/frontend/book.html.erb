<div class="book">
  <div class="container">
    <div id="app">
      <h1>{{item.name}}</h1>
      <article>
        <div class="row d-flex justify-content-center">
          <div class="col-md-4">
            <img v-bind:src="item.image" class="img">
            <p>
              {{item.description}}
            </p>
            <small>
              <b>Author:</b> {{item.author}}
            </small>
          </div>
        </div>
      </article>
      <div class="row d-flex justify-content-center buttons">
        <a href="/" class="btn btn-xs btn-info">back</a>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag('book') %>